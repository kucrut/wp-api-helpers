{
	"include": [ "scripts/**/*", "src/**/*" ],
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"checkJs": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"lib": [ "esnext", "DOM" ],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"target": "esnext"
	}
}
